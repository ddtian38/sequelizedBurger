
<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-12">
                    <h1>Eat Yo Burger!</h1>
            </div>
            <img src="/img/burger_background.jpg" alt="">
        </div>
    </div>
   
    <div class="row">
        <div class="uneaten">
                <h4>Burgers You Haven't Tried</h4>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{>buttons/button-block eaten = false text= "(Devour Me!)" disabled = ""}}
                        {{/unless}}
                    {{/each}}  
        </div>
        <div class="eaten">
                 <h4>Hope You Enjoyed the Burgers!</h4>               
                    {{#each burgers}}
                        {{#if devoured}}
                            {{>buttons/button-block eaten = true text = "(Devoured)" disabled = "disabled"}}
                        {{/if}}
                    {{/each}}                 
        </div>

    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="form-section">
                <form action="POST">
                    <div class="form-group">
                        <label for="burger">What burger would you like to eat?</label>
                        <textarea class="form-control" id="burger-form" rows="3" name="burger"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="burger-pic">Please provide a URL link of the picture for the burger</label>
                        <input type="text" class="form-control-file" id="burger-pic" name="imageLink">
                    </div>                    
                    <button id = "submitBtn" type="submit" class="btn btn-primary">Submit</button>    
                </form>
            </div>             
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

